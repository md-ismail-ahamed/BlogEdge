<!DOCTYPE html>
<html lang="en">
<head>
     <%- include('./partials/head') %>
    <title>Signup</title>
     <style>
    /* Light Theme */
    [data-bs-theme="light"] .signin-card {
      background-color: #ffffff;
      color: #212529;
    }

    /* Dark Theme */
    [data-bs-theme="dark"] .signin-card {
      background-color: #1e1e1e;
      color: #f8f9fa;
    }

    .signin-card {
      border-radius: 1rem;
    }
  </style>
</head>
<body>
      <%- include('./partials/nav') %>  <%- include('./partials/themeToggle') %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card mt-5 shadow">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Sign Up</h2>
                        <form action="/user/signup" method="post">
                            <div class="mb-3 mt-4">
                                <label for="exampleInputEmail1" class="form-label">Full Name:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="fullName">
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/script') %>
    <script src="/js/themeToggle.js"></script>
</body>
</html>