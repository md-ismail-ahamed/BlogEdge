<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
   <%- include('./partials/head') %>
   <title>Home Page</title>

   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
</head>
<body class="bg-body text-body">
    <%- include('./partials/nav') %>
   
    <div class="container mt-5">
        <h1 class="blog-title mb-4 text-center">Explore Blogs</h1>

        <div class="row g-4 justify-content-start">
            <% blogs.forEach(blog => { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-lg border-0 h-100 rounded-4 animate__animated animate__fadeInUp theme-card">

                        <img src="<%= blog.coverImageURL %>" class="card-img-top blog-cover-image" alt="Blog Cover Image">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto w-100">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
    <script src="/js/themeToggle.js"></script>
</body>
</html>
